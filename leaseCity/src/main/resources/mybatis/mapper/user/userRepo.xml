<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="leasecity.repo.userRepo">
 	
 	<!-- 유저 전체 조회-->
 	<select id="getAllSelectUsers" resultType="user">
 		SELECT * FROM users
 	</select>
 	
 	<!-- 유저 ID로 조회 -->
 	<select id="getSelectUser" parameterType="String" 
 								resultType="user">
 		SELECT * FROM users WHERE user_id = #{userId}
 	</select>
 	
 	<!-- 유저 추가 -->
 	<insert id="insertUser" parameterType="user">
 		INSERT INTO users VALUES(
 		#{userId},#{password},
 		#{companyName},#{representName},
 		#{representPhone},#{handPhone},
 		#{email},#{address},
 		#{notifyOnOff},#{url}
 		#{regDate}, #{evaluation})	
 	</insert>
 	
 	<!-- 유저 수정 -->
 	<update id="updateUser" parameterType="user">
 		UPDATE user
 		SET represent_phone = #{representPhone}
 			hand_phone = #{handPhone}
 			address = #{address}
 			notify_on_off = #{notifyOnOff}
 			url = ${url}
 		WHERE user_id = #{userId}
 	</update>
 	
 	<!-- 유저 삭제 -->
 	<delete id="deleteUser" parameterType="user">
 		DELETE FROM users
 		WHERE user_id = #{userId}
 	</delete>
 	
 	<!-- 유저 비밀번호 해싱 -->
 	<update id="hashingPassword" parameterType="user">
 		UPDATE users
 		SET password = #{password}
 		WHERE user_id = #{userId}
 	</update>
 
 </mapper>