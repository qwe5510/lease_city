<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="leasecity.repo.license">
 	
 	<!-- 자격증 전체 조회 -->
 	<select id="getAllSelectLicense" resultType="license">
 		SELECT * 
 		FROM license
 	</select>
 	
 	<!-- 유저별 자격증목록 검색 -->
 	<select id="getSelectUserLicense" parameterType="String" 
 					resultType="license">
 		SELECT * 
 		FROM license
 		WHERE user_id = #{userId}
 	</select>
 	
 	<!-- 차번을 통한 자격증 검색 -->
 	<select id="getSelectlicense" parameterType="String" 
 					resultType="license">
 		SELECT * 
 		FROM license
 		WHERE license_no = #{licenseNo}
 	</select>
 	
 	<!-- 자격증 추가 -->
 	<insert id="insertLicense" parameterType="license">
 		INSERT INTO license VALUES(
 		#{licenseNo},#{userId},#{licenseName},
 		#{licenseDate}, #{licenser})
 	</insert>
 	
 	<!-- 자격증 수정 -->
 	<update id="updateLicense" parameterType="license">
 		UPDATE license SET
 		license_no = #{licenseNo}, user_id = #{userId},
 		license_name = #{licenseName}, license_date = {licenseDate}
 		licenser = #{licenser}
 		WHERE license_no = #{licenseNo}
 	</update>
 	
 	<!-- 자격증 삭제 -->
 	<delete id="deleteLicense" parameterType="license">
 		DELETE FROM license
 		WHERE license_no = #{licenseNo} 
 	</delete>
 	
 	<!-- 유저 별 통합 자격증 삭제 -->
 	<delete id="deleteUserLicense" parameterType="String">
 		DELETE FROM license
 		WHERE user_id = #{user_id} 
 	</delete>
 
 </mapper>