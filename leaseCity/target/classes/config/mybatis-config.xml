<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!-- DTO에 대한 축약형 등록 -->
	
	<!-- UnderScore방식 <-> CamelCase 변환 setting-->
	<!-- xxx_yyy <-> xxxYyy -->
	<settings>
		<setting name="mapUnderscoreToCamelCase" value="true"/>
	</settings>
	
	<typeAliases>
	    <!-- 1.유저 (건설업체 - 자격증 / 중기업체 - 중장비)-->
		<typeAlias type="leasecity.dto.User" alias="user"/>
		<typeAlias type="leasecity.dto.ConstructionCompany" alias="constructionCompany"/>
		<typeAlias type="leasecity.dto.License " alias="license" />
		<typeAlias type="leasecity.dto.HeavyEquipmentCompany" alias="heavyEquipmentCompany"/>
		<typeAlias type="leasecity.dto.HeavyEquipment" alias="heavyEquipment" />
		
		<!-- 2.임대 업무(임대요청 / 직접요청 / 신청 / 양도 /  -->
		<typeAlias type="leasecity.dto.LeaseCall" alias="leaseCall" />
		<typeAlias type="leasecity.dto.LeaseDirectCall" alias="leaseDirectCall" />
		<typeAlias type="leasecity.dto.LeaseRequest" alias="leaseRequest" />
		<typeAlias type="leasecity.dto.LeaseTransfer" alias="leaseTransfer" />
		<typeAlias type="leasecity.dto.LeaseSelection" alias="leaseSelection" />
		
		<!--  3.커뮤니티 (게시글, 댓글) -->
		<typeAlias type="leasecity.dto.Comment" alias="comment" />
		<typeAlias type="leasecity.dto.Reply" alias="reply" />
		
		<!--  4.관리자 기능(Q&A, 알림, 대기유저, 작업기록, 관리자 -->
		<typeAlias type="leasecity.dto.LeasecityAdmin" alias="leasecityAdmin" />
		<typeAlias type="leasecity.dto.Question" alias="question" />
		<typeAlias type="leasecity.dto.Answer" alias="answer" />
		<typeAlias type="leasecity.dto.Notify" alias="notify" />
		<typeAlias type="leasecity.dto.StandByUser" alias="standByUser" />
		<typeAlias type="leasecity.dto.WorkLog" alias="workLog" />
		
	</typeAliases>
	
	<mappers>
		<mapper resource="mybatis/mapper/userRepo.xml" />
	</mappers>
	
	
	
</configuration>